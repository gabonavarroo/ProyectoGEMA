<Window x:Class="RegistroGEMA.ModificarUsuario"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroGEMA"
        mc:Ignorable="d"
        Title="ModificarUser" Height="270" Width="420">
    <Grid Background="#FF5AA7A2">
        <Label Content="Correo" HorizontalAlignment="Left" Margin="38,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbCorreo" HorizontalAlignment="Left" Height="23" Margin="111,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="tbCorreo_TextChanged"/>
        <Button x:Name="tbModificar" Content="Modificar" HorizontalAlignment="Left" Margin="111,160,0,0" VerticalAlignment="Top" Width="75" Click="tbModificar_Click" />
        <Button x:Name="tbRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="111,199,0,0" VerticalAlignment="Top" Width="75" Click="tbRegresar_Click" />
        <TextBox x:Name="tbUsuario" HorizontalAlignment="Left" Height="23" Margin="111,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="tbUsuario_TextChanged"/>
        <Label Content="Usuario&#xA;" HorizontalAlignment="Left" Margin="38,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="38,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbContra" HorizontalAlignment="Left" Height="23" Margin="111,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="tbContra_TextChanged"/>


    </Grid>
</Window>